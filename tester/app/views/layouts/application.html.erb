<!DOCTYPE html>
<html>
  <head>
    <title>Tester</title>
    
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <nav class="navbar navbar-inverse">
  <%= link_to 'HOMEPAGE', root_path, class: 'navbar-brand' %>
    
      <% if user_signed_in? %>
      <%= link_to 'Create Advertisement', new_post_path, class: 'navbar-brand'%>
      <%= link_to "Logout", destroy_user_session_path, class: 'navbar-brand',method:  :delete  %>
      <% else %>
      <%= link_to 'Login', new_user_session_path, class: 'navbar-brand' %>
      <% end %>

    
</nav>
<div class="col-md-10 col-md-offset-1">
  <%= yield %>
</div>

  </body>
</html>
